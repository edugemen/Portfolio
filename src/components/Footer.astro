---
import { getLangFromUrl, useTranslations } from "../lang/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
    class="flex flex-row justify-center items-center gap-3 text-white text-base p-10"
>
    <h6>{t("footer.copy")}</h6>
    <h6>{t("footer.github")}</h6>
    <a href="https://github.com/edugemen">
        <h6 class="text-sky-400 hover:text-sky-100">{t("footer.link")}</h6>
    </a>
</footer>

<style>
    footer {
        box-sizing: border-box;
        display: flex;
        width: 100%;
        height: 70px;
        background-color: rgb(13, 13, 13);
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 5px;
        padding: 10px;
    }

    a {
        text-decoration: none;
        cursor: pointer;
    }
</style>
