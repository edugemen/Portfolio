---
import Text from "./Text";
---

<footer>
    <Text client:visible type="h4" id="footer.copy" />
    <Text client:visible type="h4" className="secondary" id="footer.github" />
    <a href="https://github.com/edugemen">
        <Text client:visible type="h4" className="primary" id="footer.link" />
    </a>
</footer>

<style>
    footer {
        display: flex;
        width: 100%;
        height: 80px;
        background-color: rgb(13, 13, 13);
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    a {
        text-decoration: none;
        cursor: pointer;
    }
</style>
